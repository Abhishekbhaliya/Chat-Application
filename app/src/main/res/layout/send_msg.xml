<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="end"
    android:layout_gravity="end">

    <LinearLayout
        android:id="@+id/SmLinear"
        android:orientation="vertical"
        android:background="@drawable/send_drawable"
        android:padding="15dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/Smessage"
            android:textColor="@color/white"
            android:textStyle="bold|normal"
            android:textSize="16sp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:textAlignment="textEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/ScalDate_textchat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/SmLinear1"
        android:orientation="vertical"
        android:padding="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:visibility="visible"
        android:background="#2D9732"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/Simage"
        android:layout_margin="5dp"
        android:visibility="visible"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder"
        android:layout_width="200dp"
        android:layout_height="130dp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Simagname"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="...."
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"
                android:textStyle="bold|normal"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/ScalDate_textchat1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_gravity="right"
                android:textColor="@color/black" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/SpdfLinear"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:visibility="gone"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_shap"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Spdfimage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/doc"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/SdocName"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="...."
                    android:maxLines="1"
                    android:lines="1"
                    android:singleLine="true"
                    android:textStyle="bold|normal"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/SpdfDate_textchat1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:text="o;sjhpsgjho"
                    android:padding="2dp"
                    android:textColor="@color/black" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>