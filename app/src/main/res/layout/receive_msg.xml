<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="start"
    android:layout_gravity="start">


    <LinearLayout
        android:id="@+id/RmLinear"
        android:orientation="vertical"
        android:background="@drawable/receive_drawable"
        android:padding="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/Rmessage"
            android:textColor="@color/black"
            android:textStyle="bold|normal"
            android:textSize="16sp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:textAlignment="textStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/RcalDate_textchat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:textColor="@color/black" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/RmLinear1"
        android:orientation="vertical"
        android:padding="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:visibility="visible"
        android:layout_marginBottom="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/Rimage"
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/Rimage_dowenload"
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="#E8E7E7"
                android:padding="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/dowenload_icon"
                android:visibility="gone" />


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Rimagname"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="...."
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"
                android:textStyle="bold|normal"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/RcalDate_textchat1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:gravity="center"
                android:text="..."
                android:layout_marginLeft="15dp"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/RpdfLinear"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="1dp"
        android:visibility="gone"
        android:layout_marginBottom="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_shap"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Rpdfimage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:src="@drawable/doc"
                    android:visibility="visible"
                    android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/Rdocname"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="...."
                        android:maxLines="1"
                        android:lines="1"
                        android:singleLine="true"
                        android:textStyle="bold|normal"
                        android:layout_gravity="center_vertical" />

                    <ImageView
                        android:id="@+id/Rpdfdown_BTN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:visibility="gone"
                        android:src="@drawable/dowenload_icon"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="6dp"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/RpdfDate_textchat1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:text="..."
                    android:padding="2dp"
                    android:textColor="@color/black" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        </LinearLayout>


    </LinearLayout>
